<Window x:Class="CartSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CartSystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="addButton" Content="Add" HorizontalAlignment="Left" Margin="139,66,0,0" VerticalAlignment="Top" Width="75" Click="addButton_Click"/>
        <Button x:Name="deleteButton" Content="Delete" HorizontalAlignment="Left" Margin="139,140,0,0" VerticalAlignment="Top" Width="75" Click="deleteButton_Click"/>
        <TextBox x:Name="addText" HorizontalAlignment="Left" Height="23" Margin="10,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="updateButton" Content="Update" HorizontalAlignment="Left" Margin="139,103,0,0" VerticalAlignment="Top" Width="75" Click="updateButton_Click"/>
        <ListBox x:Name="listList" HorizontalAlignment="Left" Height="119" Margin="237,66,0,0" VerticalAlignment="Top" Width="268"/>

    </Grid>
</Window>
